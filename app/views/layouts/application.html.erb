<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tags %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'Home' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <a href="https://github.com/pmq20/enclose-io">
      <img style="position: fixed; top: 0; right: 0; border: 0; width: 149px; height: 149px; z-index: 30000" src="<%= asset_path 'fork.png' %>" alt="Fork me on GitHub" />
    </a>
    <script type="text/javascript">
      window.enclose_io.projects = <%= raw Project.all.to_json %>;
    </script>
    <%= yield :pre %>
    <div id="sidebar">
    </div>
    <%= javascript_pack_tag 'application' %>
    <div id="main" class="<%= params[:controller] %>">
      <%= yield %>
    </div>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
    
      ga('create', 'UA-101659982-1', 'auto');
      ga('send', 'pageview');
    
    </script>
  </body>
</html>
